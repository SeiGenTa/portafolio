---
interface Props {
  title: string;
  description: string;
  image: string;
  url?: string;
}

const { title, description, image, url } = Astro.props;
---

<div class="card">
  <img src={image} alt="" />
  <div class="title"><h3>{title}</h3></div>
  <div class="description">
    <p>{description}</p>
    <a href={url}>Saber mas</a>
  </div>
</div>

<style>
  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: transparent;
    color: var(--text);
    border-radius: 10px;
    box-shadow: black 0 2px 5px;
    overflow: hidden;
    transition: all 0.3s;
    width: 250px;
    height: 300px;
    align-self: center;
    text-decoration: none;
  }
  .card:hover {
    transform: scale(1.05);
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  h3 {
    z-index: 100;
    text-align: center;
    font-size: 1.2rem;
    font-weight: 700;
    align-self: center;
    color: white;
  }

  .title {
    display: flex;
    position: absolute;
    height: min-content;
    width: 100%;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.4);
    transition: all 0.3s;
  }

  .description {
    position: absolute;
    height: 100%;
    width: 100%;
    transition: all 0.3s;
    justify-content: space-between;
    transform: translateY(100%);
  }

  p {
    font-size: 1rem;
    font-weight: 600;
    margin-inline: 15px;
    margin-block: 10px;
    height: calc(100% - 70px);
    text-overflow: ellipsis;
  }

  .card:hover .title {
    transform: translateY(-100%);
  }

  .card:hover .description {
    transform: translateY(0);
  }

  a {
    display: flex;
    width: 100%;
    margin-block: 20px;
    justify-content: center;
    text-decoration: none;
    color: white;
    font-weight: bolder;
  }

  a:hover {
    text-decoration:underline;
  }

  .card:hover img {
    filter: blur(2px) opacity(0.4);
  }
</style>
