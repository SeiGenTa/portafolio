---
interface Props {
  title: string;
  description: string;
  image: string;
  url?: string;
}

const { title, description, image, url } = Astro.props;
---

<a href={url}>
  <img src={image} alt="" />
  <h3>{title}</h3>
  <p>{description}</p>
</a>

<style>
  a {
    display: flex;
    flex-direction: column;
    background-color: var(--green-primary) ;
    color: var(--text);
    border-radius: 10px;
    box-shadow: black 0 2px 5px;
    overflow: hidden;
    transition: all 0.3s;
    width: 250px;
    height: 300px;
    align-self: center;
    text-decoration: none;
  }
  a:hover {
    transform: scale(1.05);
  }
  img {
    width: 300px;
    height: 200px;
    object-fit: cover;
  }
  h3 {
    font-size: 1.2rem;
    color: var(--green-secundary);
    align-self: center;
    margin-block: 2px;
  }
  p {
    font-size: 0.8rem;
    margin-inline: 10px;
    margin-block: 2px;
  }
</style>
