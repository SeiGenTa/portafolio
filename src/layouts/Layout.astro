---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="app-bar">
      <div class="image-perfil">
        <img src="perfil.jpeg" alt="" />
        <h3>Alvaro martinez</h3>
      </div>
      <div class="directions">
        <a href="#init">inicio</a>
        <a href="#about_me">acerca de</a>
        <a href="#projects">proyectos</a>
        <a href="#contact">contacto</a>
      </div>
      <div class="show-directions">
        icono
        <div class="directions-nav-bar">
          <a href="#init">inicio</a>
          <a href="#about_me">acerca de</a>
          <a href="#projects">proyectos</a>
          <a href="#contact">contacto</a>
        </div>
      </div>
    </div>
    <slot />
  </body>

  <style is:global>
    :root {
      --black: #000000;
      --green-primary: #013220;
      --green-secundary: #50c878;
      --background: #2b2b2b;
      --text: #f5f5f5;
    }

    .title-section {
      margin: 0;
      font-size: 2.5rem;
      color: var(--green-secundary);
      align-self: center;
    }
    section {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    html {
      font-family: system-ui, sans-serif;
      background: var(--background);
      padding: 0;
      width: 100%; /* Ocupa el ancho completo de la pantalla */
      scroll-behavior: smooth;
    }
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      color: var(--text);
    }
  </style>

  <style>
    .directions-nav-bar {
      display: flex;
      flex-direction: column;
      gap: 10px;
      background-color: var(--background);
      position: absolute;
      top: 60px;
      right: 0;
      padding: 10px;
      box-shadow: var(--black) 0px 0px 2px;
      display: none;
    }

    .directions-nav-bar a {
      text-decoration: none;
    }

    .directions-nav-bar a:hover {
      color: var(--green-secundary);
    }

    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
    .image-perfil {
      display: flex;
      gap: 20px;
      flex-direction: row;
      align-items: center;
    }
    .image-perfil img {
      height: 40px;
      border-radius: 30px;
    }

    .image-perfil h3 {
      color: var(--green-secundary);
    }

    .app-bar {
      width: 100%;
      height: 60px;
      display: flex;
      position: fixed;
      flex-direction: row;
      align-items: center;
      padding-inline: 10px;
      justify-content: space-between;
      background-color: var(--background);
      box-shadow: var(--black) 0px 0px 2px;
    }

    .directions {
      display: flex;
      flex-direction: row;
      gap: 20px;
    }

    .directions a, .show-directions a {
      color: var(--green-secundary);
      text-decoration: none;
      transition: color 0.3s;
    }

    .directions a:hover, .show-directions {
      color: var(--text);
    }

    .show-directions {
      display: none;
      height: 100%;
      align-items: center;
    }

    .row {
      display: flex;
      flex-direction: row;
    }

    .align-center {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    @media (max-width: 600px) {
      .directions {
        display: none;
      }
      .show-directions {
        display: flex;
        gap: 10px;
      }

      .show-directions:hover .directions-nav-bar {
        display: flex;
      }
    }
  </style>
</html>
